# RollCallQR - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# REQUIRED SETTINGS
# ============================================

# Flask Environment (development or production)
FLASK_ENV=production

# Flask Secret Key - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# Store this securely in your deployment platform
SECRET_KEY=your-super-secret-key-change-in-production

# Supabase PostgreSQL Database
# Get this from Supabase Dashboard > Project Settings > Database > Connection Pooling > Transaction mode
# Use Connection Pooling for serverless environments (Vercel)
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:YOUR_PASSWORD@aws-0-[region].pooler.supabase.com:6543/postgres

# ============================================
# OPTIONAL SETTINGS
# ============================================

# Debug mode (set to False in production)
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Email Configuration - For password reset emails
# Supports SMTP services (Gmail, SendGrid, AWS SES, etc.)
# Gmail: https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@rollcallqr.com

# Redis URL for distributed rate limiting (optional, uses in-memory if not set)
# For production, use Redis to share rate limit state across servers
# REDIS_URL=redis://localhost:6379

# ============================================
# DEPLOYMENT SETTINGS
# ============================================

# Vercel-specific: These are set automatically
# PORT=3000
# VERCEL=1
# VERCEL_ENV=production
