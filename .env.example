# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Secret Key - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Supabase PostgreSQL Database (use Connection Pooling for serverless)
# Get this from Supabase Dashboard > Project Settings > Database > Connection Pooling > Transaction mode
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:YOUR_PASSWORD@aws-0-[region].pooler.supabase.com:6543/postgres
